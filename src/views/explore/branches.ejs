<%- include('../partials/explore-header') %>

<section class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-5">
    <div>
      <h1 class="fw-bold text-dark mb-1">
        <i class="fas fa-building text-danger me-2"></i> Business Branches
      </h1>
      <p class="text-muted">Choose your preferred location and chat directly via WhatsApp.</p>
    </div>
    <!-- <a href="/branches/new" class="btn btn-danger fw-semibold rounded-pill shadow-sm">
      ‚ûï Add Branch
    </a> -->
  </div>

  <div class="row g-4">
    <% branches.forEach(branch => { %>
      <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-lg rounded-4 h-100">
          <div class="card-body d-flex flex-column justify-content-between">
            <div>
              <h5 class="fw-bold text-dark mb-2">
                <i class="fas fa-map-pin me-2 text-danger"></i><%= branch.name %>
              </h5>
              <p class="text-muted mb-3"><i class="fas fa-location-dot me-1"></i> <%= branch.location %></p>

              <% if (branch.whatsapp_number) { %>
                <a href="https://wa.me/<%= branch.whatsapp_number %>" target="_blank"
                  class="btn btn-outline-success w-100 rounded-pill d-flex align-items-center justify-content-center gap-2 mb-3">
                  <i class="fab fa-whatsapp fs-5"></i> Chat on WhatsApp
                </a>
              <% } else { %>
                <p class="text-muted small">No WhatsApp number available</p>
              <% } %>
            </div>

            <a href="/client/branches/<%= branch._id %>/sizes"
              class="btn btn-primary w-100 rounded-pill mt-auto shadow-sm">
              üîç View Size Categories
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<%- include('../partials/explore-footer') %>
