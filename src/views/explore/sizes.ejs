<%- include('../partials/explore-header') %>

<section style="height: 100%;" class="container py-5">
  <!-- ÿßŸÑÿπŸÜŸàÿßŸÜ -->
  <div class="text-center mb-5">
    <h1 class="fw-bold display-5 text-dark">üè¢ Choose Office Size in <%= branch.name %></h1>
    <p class="text-muted fs-5">Select the right space size for your team or business type.</p>
  </div>

  <!-- ŸÉÿ±Ÿàÿ™ -->
  <div class="row justify-content-center g-4">
   <% const sizes = [
  { label: "100 - 120 sq.ft", value: "100-120", icon: "fa-user", description: "Best for 1 person", color: "#1f2f46" },
  { label: "120 - 150 sq.ft", value: "120-150", icon: "fa-user-group", description: "Ideal for 2‚Äì3 people", color: "#4b6584" },
  { label: "150 - 200 sq.ft", value: "150-200", icon: "fa-people-roof", description: "Comfortable for 3‚Äì4 team", color: "#487eb0" },
  { label: "200 - 250 sq.ft", value: "200-250", icon: "fa-users-gear", description: "Spacious for a small team", color: "#b9975b" },
  { label: "300 - 400 sq.ft", value: "300-400", icon: "fa-building", description: "Perfect for a growing team", color: "#2f3640" } // ‚úÖ ÿßÿ∂ŸÅÿ™Ÿá ŸáŸÜÿß
]; %>


    <% sizes.forEach(size => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <a href="/client/branches/<%= branch._id %>/offices?size_category=<%= size.value %>" class="text-decoration-none">
          <div class="card size-box shadow-sm border-0 text-center h-100 p-4" style="background-color: <%= size.color %>; color: white; border-radius: 1.5rem;">
            <div class="icon-circle mb-3">
              <i class="fas <%= size.icon %> fa-2x"></i>
            </div>
            <h5 class="fw-bold mb-1"><%= size.label %></h5>
            <p class="small mb-0"><%= size.description %></p>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</section>

<!-- CSS -->
<style>
  .size-box {
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .size-box:hover {
    transform: translateY(-6px);
    box-shadow: 0 1rem 1.8rem rgba(0, 0, 0, 0.15);
  }

  .icon-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }

  .icon-circle i {
    color: white;
  }

  .icon-circle:hover {
    background: rgba(255, 255, 255, 0.25);
  }

  @media (max-width: 576px) {
    .icon-circle {
      width: 64px;
      height: 64px;
    }
  }
</style>

<%- include('../partials/explore-footer') %>
