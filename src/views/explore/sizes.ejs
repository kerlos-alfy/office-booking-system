<%- include('../partials/header') %>

<section class="container py-5">
  <h1 class="text-center mb-5 fw-bold display-6 text-gradient-dark">
    üè¢ Choose Office Size Range in <%= branch.name %> Branch
  </h1>

  <div class="row justify-content-center">
    <% const sizes = [
      { label: "100 - 120 sq.ft", value: "100-120", icon: "üìè", color: "#1f2f46" },     // Navy
      { label: "120 - 150 sq.ft", value: "120-150", icon: "üìê", color: "#4b6584" },     // Dark Gray
      { label: "150 - 200 sq.ft", value: "150-200", icon: "üè¢", color: "#487eb0" },     // Light Blue
      { label: "200 - 250 sq.ft", value: "200-250", icon: "üèóÔ∏è", color: "#b9975b" },     // Soft Gold
    ]; %>

    <% sizes.forEach(size => { %>
      <div class="col-6 col-md-4 col-lg-3 mb-4">
        <a href="/explore/branches/<%= branch._id %>/offices?size_category=<%= size.value %>" class="text-decoration-none">
          <div class="card size-box text-white text-center shadow-sm border-0" style="background-color: <%= size.color %>;">
            <div class="card-body d-flex flex-column justify-content-center align-items-center p-4">
              <div class="icon-circle mb-3">
                <span class="fs-2"><%= size.icon %></span>
              </div>
              <h5 class="fw-bold mb-1"><%= size.label %></h5>
              <small>View Available Offices</small>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</section>

<style>
  .size-box {
    border-radius: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .size-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 18px rgba(0,0,0,0.2);
  }

  .icon-circle {
    width: 70px;
    height: 70px;
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .text-gradient-dark {
    color: #1f2f46;
  }
</style>

