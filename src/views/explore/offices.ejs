<%- include('../partials/header') %>

<div class="container py-5">
  <h1 class="text-center mb-5 fw-bold text-dark display-6">
    🏢 Offices in <%= branch.name %> — <%= sizeLabel %>
  </h1>

  <% if (offices.length === 0) { %>
    <div class="alert alert-warning text-center fs-5">🚫 No available offices in this size range.</div>
  <% } %>

  <div class="row g-4">
    <% offices.forEach(office => { %>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 rounded-4 shadow-sm office-box">
          <!-- ✅ Office Main Image -->
          <div class="office-banner" style="background-image: url('/<%= office.main_image || "images/office-placeholder.jpg" %>');"></div>

          <div class="card-body d-flex flex-column justify-content-between p-4">
            <div>
              <h5 class="fw-bold mb-3 text-dark">Office <%= office.office_number %></h5>
              <div class="info-box mb-3">
                <p class="mb-1"><strong>📏 Size:</strong> <%= office.size_category.replace("-", " - ") %> sqft</p>
                <p class="mb-1"><strong>🗓️ Floor:</strong> <%= office.floor %></p>
              </div>
            </div>
            <a href="/client/offices/<%= office._id %>" class="btn btn-primary w-100 fw-bold mt-2">🔍 View Office</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Styles -->
<style>
  .office-box {
    background-color: #fdfdfd;
    transition: all 0.3s ease;
  }

  .office-box:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .office-banner {
    height: 180px;
    background-size: cover;
    background-position: center;
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
  }

  .info-box {
    background: #f1f3f5;
    padding: 12px;
    border-radius: 12px;
    font-size: 14px;
  }

  .btn-primary {
    background-color: #0d47a1;
    border: none;
  }

  .btn-primary:hover {
    background-color: #08306b;
  }
</style>

<%- include('../partials/footer') %>
