<%- include('./partials/header') %>

<section class="container py-5">
  <h1 class="mb-4 text-center fw-bold text-dark">üîç Manage Offices</h1>

  <div class="row mb-4">
    <div class="col-md-4">
      <label class="form-label fw-semibold">Branch</label>
      <select id="branchSelect" class="form-select shadow-sm" <%= user.branch ? 'disabled' : '' %>>
        <% branches.forEach(branch => { %>
          <option 
            value="<%= branch._id %>"
            <%= user.branch && user.branch.toString() === branch._id.toString() ? 'selected' : '' %>>
            <%= branch.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-4">
      <label class="form-label fw-semibold">Floor</label>
      <select id="floorSelect" class="form-select shadow-sm" disabled>
        <option value="">Select Floor</option>
      </select>
    </div>

    <div class="col-md-4 d-flex align-items-end">
      <button id="loadBtn" class="btn btn-success w-100 fw-semibold shadow-sm">üîé Show Offices</button>
    </div>
  </div>

  <div id="officesList" class="row"></div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<script>
  const branchSelect = document.getElementById('branchSelect');
  const floorSelect = document.getElementById('floorSelect');
  const loadBtn = document.getElementById('loadBtn');

  branchSelect.addEventListener('change', async () => {
    const branchId = branchSelect.disabled 
      ? '<%= user.branch ? user.branch : "" %>' 
      : branchSelect.value;

    floorSelect.innerHTML = '<option>Loading...</option>';
    floorSelect.disabled = true;

    if (!branchId) return;

    try {
      const res = await fetch(`/offices/branches/${branchId}/floors`);
      const floors = await res.json();

      if (floors.length === 0) {
        floorSelect.innerHTML = '<option>No Floors Available</option>';
        Swal.fire({
          icon: 'info',
          title: 'No Floors Found',
          text: 'This branch has no floors yet.'
        });
      } else {
        floorSelect.innerHTML = '<option value="">Select Floor</option>';
        floors.forEach(floor => {
          floorSelect.innerHTML += `<option value="${floor}">${floor}</option>`;
        });
        floorSelect.disabled = false;
      }
    } catch (err) {
      console.error(err);
      floorSelect.innerHTML = '<option>Error loading floors</option>';
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Failed to fetch floors.'
      });
    }
  });

  if (branchSelect.disabled) branchSelect.dispatchEvent(new Event('change'));

  loadBtn.addEventListener('click', async () => {
    const branchId = branchSelect.disabled 
      ? '<%= user.branch ? user.branch : "" %>' 
      : branchSelect.value;

    const floor = floorSelect.value;

    if (!branchId || !floor) {
      Swal.fire({
        icon: 'warning',
        title: 'Required',
        text: 'Please select both branch and floor.'
      });
      return;
    }

    loadBtn.innerHTML = 'Loading...';

    try {
      const res = await fetch(`/offices/manage/list?branch_id=${branchId}&floor=${floor}`);
      const offices = await res.json();
      renderOffices(offices);

      Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'success',
        title: `${offices.length} offices loaded`,
        showConfirmButton: false,
        timer: 2000
      });
    } catch (err) {
      console.error(err);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Failed to load offices.'
      });
    }

    loadBtn.innerHTML = 'üîé Show Offices';
  });

  function renderOffices(data) {
    const container = document.getElementById('officesList');
    container.innerHTML = '';

    if (data.length === 0) {
      container.innerHTML = '<p class="text-danger fw-semibold">‚ùå No offices found for this floor.</p>';
      Swal.fire({
        icon: 'info',
        title: 'No Offices',
        text: 'No offices found for this floor.'
      });
      return;
    }

    data.forEach(office => {
      const col = document.createElement('div');
      col.className = 'col-md-4 col-lg-3 mb-4';

      col.innerHTML = `
        <div class="office-card shadow-sm">
          <div class="office-icon">
            <i class="fas fa-door-open"></i>
          </div>
          <h5 class="office-title">Office ${office.office_number}</h5>
          <p class="office-floor">Floor: ${office.floor}</p>
          <div class="office-actions">
            <a href="/offices/${office._id}/edit" class="btn btn-success w-100 fw-semibold">
              ‚úèÔ∏è Edit Office
            </a>
          </div>
        </div>
      `;
      container.appendChild(col);
    });
  }
</script>

<style>
  body {
    background: #f8f9fa;
  }

  h1 {
    font-size: 2rem;
  }

  select.form-select {
    min-height: 45px;
  }

  .office-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 30px 20px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid #e9ecef;
  }

  .office-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  }

  .office-icon {
    font-size: 3rem;
    color: #0d6efd;
    margin-bottom: 15px;
  }

  .office-title {
    font-weight: bold;
    font-size: 1.2rem;
    margin-bottom: 5px;
  }

  .office-floor {
    font-size: 0.9rem;
    color: #6c757d;
    margin-bottom: 15px;
  }

  .office-actions .btn {
    font-size: 0.9rem;
    border-radius: 8px;
    padding: 0.55rem 1rem;
  }

  .btn-success {
    background-color: #198754;
    border: none;
    color: #fff;
  }

  .btn-success:hover {
    background-color: #157347;
  }
</style>

