<%- include('./partials/header') %>

<section class="container py-5">
  <h1 class="mb-4 text-center fw-bold text-dark">ğŸ” Manage Offices</h1>

  <div class="row mb-4">
    <div class="col-md-4">
      <label class="form-label fw-semibold">Branch</label>
      <select id="branchSelect" class="form-select" <%= user.branch ? 'disabled' : '' %> >
        <% branches.forEach(branch => { %>
          <option 
            value="<%= branch._id %>"
            <%= user.branch && user.branch.toString() === branch._id.toString() ? 'selected' : '' %>>
            <%= branch.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-4">
      <label class="form-label fw-semibold">Floor</label>
      <select id="floorSelect" class="form-select" disabled>
        <option value="">Select Floor</option>
      </select>
    </div>

    <div class="col-md-4 d-flex align-items-end">
      <button class="btn btn-success w-100 fw-semibold" id="loadBtn">ğŸ” Show Offices</button>
    </div>
  </div>

  <div id="officesList" class="row"></div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  const branchSelect = document.getElementById('branchSelect');

  // âœ… Ù„Ù…Ø§ Ø§Ù„ÙØ±Ø¹ ÙŠØªØºÙŠØ± Ø£Ùˆ ÙŠØªØ­Ù…Ù„
  branchSelect.addEventListener('change', async function() {
    const branchId = branchSelect.disabled 
      ? '<%= user.branch ? user.branch : "" %>' 
      : branchSelect.value;

    const floorSelect = document.getElementById('floorSelect');
    floorSelect.innerHTML = '<option value="">Select Floor</option>';

    if (!branchId) {
      floorSelect.disabled = true;
      return;
    }

    floorSelect.innerHTML = '<option>Loading...</option>';

    try {
      const res = await fetch(`/offices/branches/${branchId}/floors`);
      const floors = await res.json();

      floorSelect.innerHTML = '<option value="">Select Floor</option>';

      if (floors.length === 0) {
        floorSelect.innerHTML = '<option>No Floors Available</option>';
        floorSelect.disabled = true;

        Swal.fire({
          icon: 'info',
          title: 'No Floors Found',
          text: 'This branch has no floors with offices yet.'
        });

        return;
      }

      floors.forEach(floor => {
        const opt = document.createElement('option');
        opt.value = floor;
        opt.textContent = floor;
        floorSelect.appendChild(opt);
      });

      floorSelect.disabled = false;

    } catch (err) {
      console.error('Error fetching floors:', err);
      floorSelect.innerHTML = '<option>Error loading floors</option>';
      floorSelect.disabled = true;

      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Something went wrong while fetching floors.'
      });
    }
  });

  // âœ… Trigger: Ù„Ùˆ Ø§Ù„ÙØ±Ø¹ Ø«Ø§Ø¨Øª â€” Ø­Ù…Ù‘Ù„ Ø§Ù„ÙÙ„ÙˆØ±Ø² ØªÙ„Ù‚Ø§Ø¦ÙŠÙ‹Ø§
  if (branchSelect.disabled) {
    branchSelect.dispatchEvent(new Event('change'));
  }

  // âœ… Ø²Ø±Ø§Ø± ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ù…ÙƒØ§ØªØ¨
  document.getElementById('loadBtn').addEventListener('click', async function() {
    const branchId = branchSelect.disabled 
      ? '<%= user.branch ? user.branch : "" %>' 
      : branchSelect.value;

    const floor = document.getElementById('floorSelect').value;

    if (!branchId || !floor) {
      Swal.fire({
        icon: 'info',
        title: 'Required',
        text: 'Please select both branch and floor.'
      });
      return;
    }

    this.innerHTML = 'Loading...';

    try {
      const res = await fetch(`/offices/manage/list?branch_id=${branchId}&floor=${floor}`);
      const data = await res.json();
      renderOffices(data);

      Swal.fire({
        toast: true,
        position: 'top-end',
        icon: 'success',
        title: `${data.length} offices loaded`,
        showConfirmButton: false,
        timer: 2000,
        timerProgressBar: true
      });

    } catch (err) {
      console.error(err);

      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Failed to load offices.'
      });
    }

    this.innerHTML = 'ğŸ” Show Offices';
  });

  function renderOffices(data) {
    const container = document.getElementById('officesList');
    container.innerHTML = '';

    if (data.length === 0) {
      container.innerHTML = '<p class="text-danger fw-semibold">âŒ No offices found for this floor.</p>';

      Swal.fire({
        icon: 'info',
        title: 'No Offices',
        text: 'No offices found for this floor.'
      });

      return;
    }

    data.forEach(office => {
      const col = document.createElement('div');
      col.className = 'col-md-3 mb-4';

      col.innerHTML = `
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title fw-bold text-primary">ğŸ¢ ${office.office_number}</h5>
            <p class="card-text mb-2"><strong>Floor:</strong> ${office.floor}</p>
            <a href="/offices/${office._id}/edit" class="btn btn-outline-primary w-100 fw-semibold">
              âœï¸ Edit Office
            </a>
          </div>
        </div>
      `;
      container.appendChild(col);
    });
  }
</script>

<style>
  body {
    background: #f8f9fa;
  }
  h1 {
    font-size: 2rem;
  }
  select.form-select {
    min-height: 45px;
  }
  .card {
    transition: transform 0.2s ease;
  }
  .card:hover {
    transform: translateY(-5px);
  }
</style>

