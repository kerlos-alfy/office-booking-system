<%- include('../../partials/header') %>

<div class="container py-5">
  <h2 class="mb-4 text-primary">‚úèÔ∏è Edit Office</h2>

  <form action="/offices/manage/<%= office._id %>" method="POST" class="shadow p-4 bg-white rounded">

    <div class="mb-3">
      <label class="form-label">Office Number</label>
      <input type="text" name="office_number" class="form-control" required value="<%= office.office_number %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Branch</label>
      <select name="branch_id" class="form-select" required>
        <option value="">-- Select Branch --</option>
        <% branches.forEach(branch => { %>
          <option value="<%= branch._id %>" <%= office.branch_id?.toString() === branch._id.toString() ? 'selected' : '' %>>
            <%= branch.name %> | <%= branch.name_ar %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Floor</label>
      <input type="text" name="floor" class="form-control" value="<%= office.floor %>">
    </div>

    <div class="mb-3">
      <label class="form-label">Size Category</label>
      <input type="text" name="size_category" class="form-control" value="<%= office.size_category %>">
    </div>

    <div class="text-end">
      <a href="/offices/manage" class="btn btn-outline-secondary">Back</a>
      <button type="submit" class="btn btn-primary">üíæ Save Changes</button>
    </div>
  </form>
</div>

<%- include('../../partials/footer') %>
