<%- include('../../partials/header') %>

<h1 class="text-primary">➕ Create New Permission</h1>

<form method="POST" action="/admin/permissions">
  <div class="mb-3">
    <label for="key">Permission Key (English)</label>
    <input type="text" id="key" name="key" class="form-control" required>
  </div>
  <div class="mb-3">
    <label for="name">Permission Name (Arabic)</label>
    <input type="text" id="name" name="name" class="form-control" required>
  </div>
  <button class="btn btn-primary">💾 Save</button>
</form>

