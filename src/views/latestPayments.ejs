<%- include('partials/header') %>

<h1 class="mb-4 text-primary">ðŸ’µ Latest 20 Payments</h1>

<% if (latestPayments.length === 0) { %>
    <div class="alert alert-info">No payments found.</div>
<% } else { %>
    <table class="table table-bordered table-hover bg-white">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Office</th>
                <th>Client</th>
                <th>Amount</th>
                <th>Payment Date</th>
                <th>Payment Type</th>
            </tr>
        </thead>
        <tbody>
            <% latestPayments.forEach((payment, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td>
                        <% if (payment.office && payment.office.length > 0) { %>
                            <%= payment.office[0].office_number %>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>
                    <td>
                        <% if (payment.client && payment.client.length > 0) { %>
                            <%= payment.client[0].name %>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>
                    <td>$<%= payment.payments.amount %></td>
                    <td><%= new Date(payment.payments.payment_date).toISOString().split('T')[0] %></td>
                    <td><%= payment.payments.payment_type %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>

<a href="/" class="btn btn-secondary mt-4">Back to Dashboard</a>

<%- include('partials/footer') %>
