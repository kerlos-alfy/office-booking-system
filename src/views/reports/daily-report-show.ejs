    <div class="card-header bg-info text-dark fw-bold">ğŸš¶ Visits (<%= report.visits_count %>)</div>
    <div class="card-body">
      <ul class="list-group">
        <% report.visits_details.forEach((visit, idx) => { %>
          <li class="list-group-item">
            <strong>Visit <%= idx + 1 %>:</strong> <%= visit %>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>

  <!-- âœ… Payments -->
  <div class="card mb-4 shadow-sm rounded-4">
    <div class="card-header bg-warning text-dark fw-bold">ğŸ’³ Payments</div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle mb-0">
          <thead class="table-warning text-center">
            <tr>
              <th>Ejari</th>
              <th>D.P</th>
              <th>Rental</th>
              <th>Etc.</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < report.payment_ejari.length; i++) { %>
              <tr class="text-center">
                <td><span class="badge bg-success">AED <%= report.payment_ejari[i] %></span></td>
                <td><span class="badge bg-success">AED <%= report.payment_dp[i] %></span></td>
                <td><span class="badge bg-success">AED <%= report.payment_booking[i] %></span></td>
                <td><span class="badge bg-success">AED <%= report.payment_etc[i] %></span></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- âœ… Inspections -->
  <div class="card mb-4 shadow-sm rounded-4">
    <div class="card-header bg-secondary text-white fw-bold">
      ğŸ” Inspections (<%= report.inspection_count %>)
    </div>
    <div class="card-body">
