<div class="mb-3">
  <label class="form-label fw-bold">🌍 الجنسية</label>
  <select  name="nationality_ar" class="form-select js-select2" required>
    <option disabled selected>أختر الجنسية</option>
    <% nationalities.forEach(function(n) { %>
      <option  value="<%= n.ar %>"><%= n.ar %></option>
    <% }); %>
  </select>
</div>

<div class="mb-3">
  <label class="form-label fw-bold">🌍 Nationality</label>
  <select name="en" class="form-select js-select2" required>
    <option disabled selected>Choose Nationality</option>
    <% nationalities.forEach(function(n) { %>
      <option value="<%= n.en %>"><%= n.en %></option>
    <% }); %>
  </select>
</div>

    <!-- Emirates ID Status -->
    <div class="mb-3">
        <label class="form-label fw-bold">🆔 Emirates ID Status</label>
        <select name="emirates_id_status" class="form-select" required>
            <option value="OK">OK</option>
            <option value="NOT NEED">NOT NEED</option>
            <option value="UNAVAILABLE">UNAVAILABLE</option>
        </select>
    </div>

    <!-- Contract Status -->
    <div class="mb-3">
        <label class="form-label fw-bold">📄 Contract Status</label>
        <select name="contract_status" class="form-select" required>
            <option value="OK">OK</option>
            <option value="NO">NO</option>
        </select>
    </div>

    <!-- License Status -->
    <div class="mb-3">
        <label class="form-label fw-bold">🏷️ License Status</label>
        <select name="license_status" class="form-select" required>
            <option value="OK">OK</option>
            <option value="NO">NO</option>
        </select>
    </div>
<!-- License Number -->
<div class="mb-3">
    <label class="form-label fw-bold">🏷️ License Number</label>
    <input type="text" name="license_number" class="form-control" required>
</div>

<!-- License Expiry Date -->
<div class="mb-3">
    <label class="form-label fw-bold">📅 License Expiry Date</label>
    <input type="date" name="license_expiry" class="form-control" required>
</div>

    <!-- Ejari No -->
    <div class="mb-3">
        <label class="form-label fw-bold">📄 Ejari No (Optional)</label>
        <input type="text" name="ejari_no" class="form-control">
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary mt-3 fw-bold">✅ Save Client</button>

</form>

<style>
    body {
        animation: fadeIn 0.5s ease-in;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to   { opacity: 1; }
    }

    .card {
        border-radius: 12px;
    }
</style>

