<h1 class="mb-4 text-primary">➕ Add New Client</h1>

<form method="POST" action="/clients/new" class="card shadow p-4 mb-5">

    <!-- Mobile -->
    <div class="mb-3">
        <label class="form-label fw-bold">📱 Mobile Number</label>
        <input type="text" name="mobile" class="form-control" required>
    </div>

    <!-- Company Name -->
    <div class="mb-3">
        <label class="form-label fw-bold">🏢 Company Name (English)</label>
        <input type="text" name="company_en" class="form-control" required>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">🏢 اسم الشركة (بالعربية)</label>
        <input type="text" name="company_ar" class="form-control" required>
    </div>

    <!-- Registered Owner Name -->
    <div class="mb-3">
        <label class="form-label fw-bold">👤 Registered Owner Name (English)</label>
        <input type="text" name="registered_owner_name_en" class="form-control" required>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">👤 اسم المالك المسجل (بالعربية)</label>
        <input type="text" name="registered_owner_name_ar" class="form-control" required>
    </div>

