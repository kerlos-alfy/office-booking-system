<%- include('partials/header') %>

<style>
  body {
    animation: fadeIn 0.5s ease-in;
    background: #f8f9fa; /* خلفية خفيفة */
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .card {
    border-radius: 12px;
    border: none;
    box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    background: #fff;
  }

  .form-label {
    font-weight: 600;
  }

  .form-control, .form-select {
    border-radius: 8px;
    box-shadow: none;
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  .form-control:focus, .form-select:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.1rem rgba(0,123,255,.25);
  }

  .btn {
    transition: all 0.3s ease;
  }

  .btn-primary {
    border-radius: 50px;
    padding: 0.6rem 1.5rem;
  }
</style>

<div class="container py-5">
  <h1 class="mb-4 text-primary fw-bold">➕ Add New Client</h1>

  <form method="POST" action="/clients/new" class="card shadow p-4 mb-5">
    <!-- Mobile -->
    <div class="mb-3">
      <label class="form-label">📱 Mobile Number</label>
      <input type="text" name="mobile" class="form-control" required />
    </div>

    <!-- Email -->
    <div class="mb-3">
      <label class="form-label">📧 Email</label>
      <input type="email" name="email" class="form-control" />
    </div>

    <!-- TRN -->
    <div class="mb-3">
      <label class="form-label">🧾 TRN (Tax Registration Number)</label>
      <input type="text" name="trn" class="form-control" />
    </div>

    <!-- Company Name -->
    <div class="mb-3">
      <label class="form-label">🏢 Company Name (English)</label>
      <input type="text" name="company_en" class="form-control" required />
    </div>
    <div class="mb-3">
      <label class="form-label">🏢 اسم الشركة (بالعربية)</label>
      <input type="text" name="company_ar" class="form-control" required />
    </div>

    <!-- Registered Owner Name -->
    <div class="mb-3">
      <label class="form-label">👤 Registered Owner Name (English)</label>
      <input type="text" name="registered_owner_name_en" class="form-control" required />
    </div>
    <div class="mb-3">
      <label class="form-label">👤 اسم المالك المسجل (بالعربية)</label>
      <input type="text" name="registered_owner_name_ar" class="form-control" required />
    </div>

    <!-- Nationality (Arabic) -->
    <div class="mb-3">
      <label class="form-label">🌍 الجنسية</label>
      <select name="nationality_ar" class="form-select js-select2" required>
        <option disabled selected>أختر الجنسية</option>
        <% nationalities.forEach(function(n) { %>
          <option value="<%= n.ar %>"><%= n.ar %></option>
        <% }); %>
      </select>
    </div>

    <!-- Nationality (English) -->
    <div class="mb-3">
      <label class="form-label">🌍 Nationality</label>
      <select name="nationality_en" class="form-select js-select2" required>
        <option disabled selected>Choose Nationality</option>
        <% nationalities.forEach(function(n) { %>
          <option value="<%= n.en %>"><%= n.en %></option>
        <% }); %>
      </select>
    </div>

    <!-- Emirates ID Status -->
    <div class="mb-3">
      <label class="form-label">🆔 Emirates ID Status</label>
      <select name="emirates_id_status" class="form-select" required>
        <option value="OK">OK</option>
        <option value="NOT NEED">NOT NEED</option>
        <option value="UNAVAILABLE">UNAVAILABLE</option>
      </select>
    </div>

    <!-- Contract Status -->
    <div class="mb-3">
      <label class="form-label">📄 Contract Status</label>
      <select name="contract_status" class="form-select" required>
        <option value="OK">OK</option>
        <option value="NO">NO</option>
      </select>
    </div>

    <!-- License Status -->
    <div class="mb-3">
      <label class="form-label">🏷️ License Status</label>
      <select name="license_status" class="form-select" required>
        <option value="OK">OK</option>
        <option value="NO">NO</option>
      </select>
    </div>

    <!-- License Number -->
    <div class="mb-3">
      <label class="form-label">🏷️ License Number</label>
      <input type="text" name="license_number" class="form-control" required />
    </div>

    <!-- License Expiry Date -->
    <div class="mb-3">
      <label class="form-label">📅 License Expiry Date</label>
      <input type="date" name="license_expiry" class="form-control" required />
    </div>

    <!-- Ejari No -->
    <div class="mb-3">
      <label class="form-label">📄 Ejari No (Optional)</label>
      <input type="text" name="ejari_no" class="form-control" />
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary fw-bold mt-3">✅ Save Client</button>
  </form>
</div>

<%- include('partials/footer') %>
