<%- include('partials/header') %>
<style>
  .badge {
    font-size: 0.75rem;
    padding: 0.4em 0.8em;
  }
  table tbody tr:hover {
    background-color: #eef6fb !important;
    transition: all 0.2s ease-in-out;
  }
</style>

<div class="container-lg py-4">

  <!-- âœ… Header & Actions -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary mb-4">
  ğŸ“¦ Office <span style="color: red;"><%= booking.office_id?.office_number || 'N/A' %></span> Archived
  for Client <span style="color: red;"><%= booking.client_id?.registered_owner_name_en || booking.client_id?.company_en || 'N/A' %></span>
</h1>

    <div>
      <a href="/bookings/archive" class="btn btn-outline-secondary me-2 rounded-pill shadow-sm">ğŸ”™ Back</a>
      <button onclick="window.print()" class="btn btn-outline-primary rounded-pill shadow-sm">ğŸ–¨ï¸ Print</button>
    </div>
  </div>

  <!-- âœ… Contract & Client Info -->
  <div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-header text-white fw-bold rounded-top-4"
         style="background: linear-gradient(135deg, #212529, #343a40);">
      ğŸ“„ Contract & Client Info
    </div>
    <div class="card-body row gy-2">
      <div class="col-md-6">
        <p class="mb-2"><strong>ğŸ¢ Office:</strong> <%= booking.office_id?.office_number %></p>
        <p class="mb-2"><strong>ğŸ“ Branch:</strong> <%= booking.office_id?.branch_id?.name %></p>
        <p class="mb-2"><strong>ğŸ‘¤ Client:</strong> <%= booking.client_id?.registered_owner_name_en || booking.client_id?.company_en || 'N/A' %></p>
      </div>
      <div class="col-md-6">
        <p class="mb-2"><strong>ğŸ“… Start Date:</strong> <%= new Date(booking.start_date).toLocaleDateString() %></p>
        <p class="mb-2"><strong>ğŸ“… End Date:</strong> <%= new Date(booking.end_date).toLocaleDateString() %></p>
        <p class="mb-2"><strong>ğŸ“„ Page No:</strong> <%= booking.page_no %></p>
        <p class="mb-2"><strong>ğŸ§¾ Ejari No:</strong> <%= booking.ejari_no || 'N/A' %></p>
        <p class="mb-2"><strong>ğŸ“Œ Status:</strong>
          <span class="badge bg-secondary rounded-pill shadow-sm">Archived</span>
        </p>
        <p class="mb-2 text-danger"><strong>âŒ Cancel Reason:</strong> <%= booking.cancel_reason || 'ØºÙŠØ± Ù…Ø­Ø¯Ø¯' %></p>
        <p class="mb-0"><strong>ğŸ“… Cancelled Date:</strong>
          <%= booking.cancel_date ? new Date(booking.cancel_date).toLocaleDateString() : 'ØºÙŠØ± Ù…Ø­Ø¯Ø¯' %>
        </p>
      </div>
    </div>
  </div>

  <!-- âœ… Financial Details -->
  <div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-header fw-bold text-white rounded-top-4"
         style="background: linear-gradient(135deg, #0d6efd, #0a58ca);">
      ğŸ’µ Financial Details
    </div>
    <div class="card-body row gy-2">
      <div class="col-md-6">
        <p><strong>ğŸ’° Down Payment:</strong> <span class="text-success fw-bold"><%= booking.initial_payment?.toFixed(2) %> AED</span></p>
        <p><strong>ğŸ” Security Deposit:</strong> <%= booking.sec_deposit?.toFixed(2) %> AED</p>
        <p><strong>ğŸ§¾ VAT:</strong> <%= booking.vat?.toFixed(2) %> AED</p>
      </div>
      <div class="col-md-6">
        <p><strong>ğŸ’¼ Admin Fee:</strong> <%= booking.admin_fee?.toFixed(2) %> AED</p>
        <p><strong>ğŸ’¸ Commission:</strong> <%= booking.commission?.toFixed(2) %> AED</p>
        <hr>
        <p><strong>ğŸ’° Total Price:</strong>
          <span class="fw-bold text-success"><%= booking.total_price?.toFixed(2) %> AED</span>
        </p>
      </div>
    </div>
  </div>

  <!-- âœ… Cheques Table -->
<!-- ğŸ“ Cheques -->
<div class="card shadow-sm mb-4 border-0 rounded-4">
  <div class="card-header fw-bold text-white rounded-top-4"
       style="background: linear-gradient(135deg, #0d6efd, #0a58ca);">
    ğŸ“ Cheques
  </div>
  <div class="card-body p-0">
    <% if (booking.cheques && booking.cheques.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center mb-0"
               style="border-radius: 0 0 0.5rem 0.5rem; overflow: hidden;">
          <thead style="background: #0d6efd; color: #fff;">
            <tr>
              <th style="width: 5%;">#</th>
              <th style="width: 20%;">Amount (AED)</th>
              <th style="width: 25%;">Due Date</th>
              <th style="width: 20%;">Status</th>
            </tr>
          </thead>
          <tbody>
            <% booking.cheques.forEach((cheque, index) => {
              const rowClass = cheque.collected ? 'table-success' : 'table-light';
            %>
              <tr class="<%= rowClass %>">
                <td class="fw-bold"><%= index + 1 %></td>
                <td class="text-end fw-bold text-dark">
                  <%= cheque.amount?.toFixed(2) %>
                </td>
                <td><%= new Date(cheque.due_date).toLocaleDateString() %></td>
                <td>
                  <% if (cheque.collected) { %>
                    <span class="badge bg-success rounded-pill px-3 py-2 shadow-sm">âœ… Collected</span>
                  <% } else { %>
                    <span class="badge bg-danger rounded-pill px-3 py-2 shadow-sm">âŒ Uncollected</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="p-3">
        <p class="text-muted mb-0">No cheques for this rental.</p>
      </div>
    <% } %>
  </div>
</div>



  <!-- âœ… Payments Table -->
  <div class="card shadow-sm mb-5 border-0 rounded-4">
    <div class="card-header fw-bold text-white rounded-top-4"
         style="background: linear-gradient(135deg, #212529, #343a40);">
      ğŸ’³ Payments
    </div>
    <div class="card-body">
      <% if (booking.payments && booking.payments.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-bordered align-middle text-center mb-0">
            <thead style="background: linear-gradient(135deg, #212529, #343a40); color: #fff;">
              <tr>
                <th style="width: 5%;">#</th>
                <th style="width: 20%;">Amount (AED)</th>
                <th style="width: 25%;">Date</th>
                <th style="width: 20%;">Type</th>
              </tr>
            </thead>
            <tbody>
              <% booking.payments.forEach((payment, index) => { %>
                <tr class="table-light">
                  <td class="fw-bold"><%= index + 1 %></td>
                  <td class="text-end" style="font-family: monospace;"><%= payment.amount?.toFixed(2) %></td>
                  <td><%= new Date(payment.payment_date).toLocaleDateString() %></td>
                  <td>
                    <% if (payment.payment_type === 'initial') { %>
                      <span class="badge bg-primary rounded-pill px-3 py-2">Down Payment</span>
                    <% } else if (payment.payment_type === 'installment') { %>
                      <span class="badge bg-info text-dark rounded-pill px-3 py-2">Installment</span>
                    <% } else { %>
                      <span class="badge bg-secondary rounded-pill px-3 py-2">Other</span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-muted mb-0">No payments recorded for this rental.</p>
      <% } %>
    </div>
  </div>

</div>

<!-- âœ… Ù„Ù…Ø³Ø§Øª CSS -->
