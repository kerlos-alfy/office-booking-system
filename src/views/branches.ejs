<%- include('partials/header') %>

<div class="container">
  <h1 class="mb-4 fw-bold text-primary">ğŸ¢ Branches List</h1>

  <% if (user && user.permissions.includes('branches.create')) { %>
    <a href="/branches/new" class="btn btn-success mb-4">â• Add New Branch</a>
  <% } %>

  <% if (branches.length === 0) { %>
    <div class="alert alert-info">No branches found.</div>
  <% } else { %>
    <div class="row g-4">
      <% branches.forEach(branch => { 
        const available = branch.available_offices ? parseInt(branch.available_offices) : 0;
        const total = branch.total_offices ? parseInt(branch.total_offices) : 0;
        const occupied = total - available > 0 ? total - available : 0;
        const percent = total > 0 ? Math.round((occupied / total) * 100) : 0;
      %>

        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
          <a href="/bookings/branch/<%= branch._id %>" class="text-decoration-none">
            <div class="card branch-card shadow-sm h-100 d-flex flex-column align-items-center justify-content-center text-center p-4">
              <div class="icon mb-3">ğŸ¢</div>
              <h5 class="card-title fw-bold text-primary mb-2"><%= branch.name %></h5>
              <p class="card-text text-muted mb-3">ğŸ“ <%= branch.location %></p>
              <span class="badge capacity-badge">
                ğŸ‘¥ Occupied: <%= occupied %> / <%= total %> (<%= percent %>%)
              </span>
            </div>
          </a>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<style>
  .branch-card {
    border: 2px solid #e0e0e0;
    border-radius: 16px;
    background: #ffffff;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .branch-card:hover {
    border-color: #0d6efd;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.12);
    transform: translateY(-5px);
  }

  .branch-card .icon {
    font-size: 52px;
  }

  .capacity-badge {
    background: #f8f9fa;
    color: #212529;
    border: 1px solid #ced4da;
    padding: 6px 12px;
    border-radius: 20px;
    font-weight: 500;
  }

  body {
    animation: fadeIn 0.4s ease-in;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to   { opacity: 1; }
  }
</style>

<%- include('partials/footer') %>
