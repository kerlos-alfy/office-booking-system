						<a href="<%= client.ejari_file_path %>" target="_blank" class="btn btn-outline-primary btn-sm mt-2">View File</a>
					</div>
				</div>
				<% } %> <% if (client.emirates_id_file_path) { %>
				<div class="col-md-4">
					<div class="card p-3 h-100">
