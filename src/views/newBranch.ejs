<%- include('partials/header') %>

    <div class="container py-5">
        <h1 class="mb-4 text-success">➕ Add New Branch</h1>

        <form method="POST" action="/branches/new" class="bg-white p-4 rounded shadow-sm">

            <div class="mb-3">
                <label class="form-label">Name:</label>
                <input type="text" name="name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Location:</label>
                <input type="text" name="location" class="form-control" required>
            </div>
            <div class="mb-3">
  <label class="form-label">WhatsApp Number</label>
  <input type="text" class="form-control" name="whatsapp_number" placeholder="مثال: 971501234567" />
</div>


            <button type="submit" class="btn btn-primary">Save Branch</button>
            <a href="/branches" class="btn btn-secondary ms-2">Back to Branches</a>

        </form>
    </div>

<%- include('partials/footer') %>
