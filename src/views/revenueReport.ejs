<%- include('partials/header') %>

<h1 class="mb-4 text-primary">ðŸ“Š Revenue Report</h1>

<!-- Form Ù„Ø§Ø®ØªÙŠØ§Ø± Ø§Ù„Ø´Ù‡Ø± ÙˆØ§Ù„ÙØ±ÙˆØ¹ -->
<form method="GET" action="/reports/revenue" class="mb-4">
    <div class="row g-3 align-items-center">

        <!-- Month -->
        <div class="col-auto">
            <label class="col-form-label">Select Month:</label>
        </div>
        <div class="col-auto">
            <input type="month" name="month" class="form-control" value="<%= selectedMonth %>" required>
        </div>

        <!-- Branches -->
        <div class="col-auto">
            <label class="col-form-label">Select Branches:</label>
        </div>
        <div class="col-auto">
            <select id="branchSelect" name="branch_ids" class="form-select select2" multiple style="min-width: 250px;">
                <% branches.forEach(branch => { %>
                    <option value="<%= branch._id %>" <%= selectedBranchIds.includes(branch._id.toString()) ? 'selected' : '' %>>
                        <%= branch.name %>
                    </option>
                <% }) %>
            </select>
            <% if (selectedBranchIds.length > 0) { %>
                <div class="mt-2">
                    <span class="badge bg-info text-dark">
                        Selected Branches: <%= selectedBranchIds.length %>
                    </span>
                </div>
            <% } %>
        </div>

        <!-- Buttons -->
        <div class="col-auto d-flex flex-column gap-2">
            <button type="submit" class="btn btn-primary">Generate Report</button>

            <!-- Clear Selection button -->
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearBranchSelection()">
                Clear Selection
            </button>
        </div>

    </div>
</form>

<!-- Ø¥Ø¬Ù…Ø§Ù„ÙŠØ§Øª + Pie Chart Ø¬Ù†Ø¨ Ø¨Ø¹Ø¶ -->
<% if (selectedMonth && reportData.length > 0) { %>
    <div class="row align-items-start mb-4">
        <!-- Col 1: Ø§Ù„Ø¥Ø­ØµØ§Ø¦ÙŠØ§Øª -->
        <div class="col-md-6 mb-3">
            <h5>ðŸ“… Month: <%= selectedMonth %></h5>
            <h5>ðŸ’° Total Expected Revenue: $<%= totalExpectedRevenue %></h5>
            <h5>ðŸ’µ Total Paid: $<%= totalPaid %></h5>
            <h5>ðŸ“ˆ Collection Rate: <%= collectionRate.toFixed(2) %> %</h5>
        </div>

        <!-- Col 2: Pie Chart -->
        <div class="col-md-6 text-center">
            <h5>ðŸ“Š Collection Rate Pie</h5>
            <div style="max-width: 200px; margin: 0 auto;">
                <canvas id="collectionPie"></canvas>
            </div>
        </div>
    </div>

    <!-- Chart Script -->
    <script>
        const pieCtx = document.getElementById('collectionPie').getContext('2d');
        const pieChart = new Chart(pieCtx, {
            type: 'pie',
            data: {
                labels: ['Paid', 'Remaining'],
                datasets: [{
                    data: [
                        <%= totalPaid %>,
                        <%= totalExpectedRevenue - totalPaid %>
                    ],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(255, 99, 132, 0.8)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    </script>
<% } %>

<!-- Table -->
<% if (reportData.length === 0 && selectedMonth) { %>
    <div class="alert alert-warning">No data found for this month.</div>
<% } else if (reportData.length > 0) { %>
    <table class="table table-bordered table-hover bg-white">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Office</th>
                <th>Client</th>
                <th>Contract Type</th>
                <th>Expected Revenue</th>
                <th>Paid So Far</th>
                <th>Remaining</th>
            </tr>
        </thead>
        <tbody>
            <% reportData.forEach((row, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= row.office %></td>
                    <td><%= row.client %></td>
                    <td><%= row.contract_type %></td>
                    <td>$<%= row.expected_revenue %></td>
                    <td>$<%= row.paid_so_far %></td>
                    <td>$<%= row.remaining %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>

<!-- Select2 Plugin -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function() {
        $('#branchSelect').select2({
            placeholder: "Select one or more branches",
            allowClear: true,
            width: 'resolve'
        });
    });

    function clearBranchSelection() {
        $('#branchSelect').val(null).trigger('change');
        // âœ… ÙŠØ¹Ù…Ù„ Submit ØªÙ„Ù‚Ø§Ø¦ÙŠ
        $('#branchSelect').closest('form')[0].submit();
    }
</script>

<%- include('partials/footer') %>
