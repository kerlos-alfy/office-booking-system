<script>
  document.addEventListener('DOMContentLoaded', () => {
    const links = document.querySelectorAll('.navbar-nav .nav-link');
    const path = window.location.pathname;

    links.forEach(link => {
      if (link.getAttribute('href') === path) {
        link.classList.add('active');
      }
    });
  });
</script>

