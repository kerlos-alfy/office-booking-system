  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <!-- Active link highlight -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const links = document.querySelectorAll('.nav-link');
      const path = window.location.pathname;
      links.forEach(link => {
        if (link.getAttribute('href') === path) {
          link.classList.add('active');
        }
      });
    });
  </script>

  <!-- Styles -->
  <style>
    body {
      display: flex;
      flex-direction: row;
      min-height: 100vh;
      margin: 0;
      background: #f9f9fb;
      font-family: "Segoe UI", sans-serif;
      animation: fadeIn 0.5s ease-in;
    }

    .sidebar {
      width: 250px;
      background: #212529;
      color: #fff;
      flex-shrink: 0;
      transition: transform 0.3s ease;
    }

    .sidebar .sidebar-header {
      display: none;
    }

    .sidebar .brand {
      display: flex;
      align-items: center;
      padding: 20px;
      text-decoration: none;
      color: #fff;
    }

    .sidebar .brand img {
      height: 40px;
      margin-right: 10px;
    }

    .sidebar hr {
      border-top: 1px solid #444;
      margin: 0 20px;
    }

    .sidebar .nav-link {
      color: #fff;
      padding: 10px 20px;
      display: block;
      transition: background 0.2s ease, color 0.2s ease;
      border-radius: 6px;
    }

   
    .sidebar .nav-link.active {
      background: #13b41b69;
      color: #fff !important;
      font-weight: bold;
    }

    
.sidebar .nav-link:hover{
      background: #38f3418c;
      color: #fff !important;
      font-weight: bold;
    }
    .content-wrapper {
      display: flex;
      flex-direction: column;
      flex-grow: 1;
    }

    .topbar {
      display: none;
    }

    .content {
      flex-grow: 1;
      padding: 30px;
    }

    footer {
      background: #212529;
      color: #fff;
      text-align: center;
      padding: 15px;
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }

      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        transform: translateX(-100%);
        z-index: 999;
      }

      .sidebar.show {
        transform: translateX(0);
      }

      .sidebar .sidebar-header {
        display: flex;
        justify-content: flex-end;
        padding: 10px 20px;
        border-bottom: 1px solid #444;
      }

      .topbar {
        display: flex;
        background: #212529;
        color: #fff;
        padding: 10px 20px;
        justify-content: space-between;
        align-items: center;
      }
    }

    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

    .logout:hover {
      background: #e6101073 !important;
    }

    /* .nav-item{
      border-bottom: #ffffff3a solid 1px;
  
    } */

  
  </style>
</head>

