<div class="container">

<h1 class="mb-4 text-primary">üì§ Upload Documents for Client</h1>

<p class="mb-3 fw-bold">Client: <%= client.company %> / <%= client.registered_owner_name %></p>

<form method="POST" action="/clients/<%= client._id %>/upload" enctype="multipart/form-data" class="card shadow p-4 mb-5">

    <!-- License -->
    <div class="card-upload mb-3">
        <div class="me-3">
            <i class="fas fa-id-card-alt fa-2x text-primary"></i>
        </div>
        <div class="flex-grow-1">
            <label class="form-label fw-bold mb-1">üìÑ License</label>
            <input type="file" name="license_file" class="form-control" />
            <% if (client.license_file_path) { %>
                <div class="mt-2">
                    <a href="<%= client.license_file_path %>" target="_blank" class="badge bg-secondary text-white">View Current License</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Ejari -->
    <div class="card-upload mb-3">
        <div class="me-3">
            <i class="fas fa-file-contract fa-2x text-success"></i>
        </div>
        <div class="flex-grow-1">
            <label class="form-label fw-bold mb-1">üìÑ Ejari</label>
            <input type="file" name="ejari_file" class="form-control" />
            <% if (client.ejari_file_path) { %>
                <div class="mt-2">
                    <a href="<%= client.ejari_file_path %>" target="_blank" class="badge bg-secondary text-white">View Current Ejari</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Emirates ID -->
    <div class="card-upload mb-3">
        <div class="me-3">
            <i class="fas fa-id-badge fa-2x text-info"></i>
        </div>
        <div class="flex-grow-1">
            <label class="form-label fw-bold mb-1">üìÑ Emirates ID</label>
            <input type="file" name="emirates_id_file" class="form-control" />
            <% if (client.emirates_id_file_path) { %>
                <div class="mt-2">
                    <a href="<%= client.emirates_id_file_path %>" target="_blank" class="badge bg-secondary text-white">View Current Emirates ID</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Passport -->
    <div class="card-upload mb-3">
        <div class="me-3">
            <i class="fas fa-passport fa-2x text-warning"></i>
        </div>
        <div class="flex-grow-1">
            <label class="form-label fw-bold mb-1">üìÑ Passport</label>
            <input type="file" name="passport_file" class="form-control" />
            <% if (client.passport_file_path) { %>
                <div class="mt-2">
                    <a href="<%= client.passport_file_path %>" target="_blank" class="badge bg-secondary text-white">View Current Passport</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Contract -->
    <div class="card-upload mb-3">
        <div class="me-3">
            <i class="fas fa-file-signature fa-2x text-danger"></i>
        </div>
        <div class="flex-grow-1">
            <label class="form-label fw-bold mb-1">üìÑ Contract</label>
            <input type="file" name="contract_file" class="form-control" />
            <% if (client.contract_file_path) { %>
                <div class="mt-2">
                    <a href="<%= client.contract_file_path %>" target="_blank" class="badge bg-secondary text-white">View Current Contract</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Additional Files -->
    <div class="card-upload mb-3">
        <div class="me-3">
            <i class="fas fa-paperclip fa-2x text-muted"></i>
        </div>
        <div class="flex-grow-1">
            <label class="form-label fw-bold mb-1">üìé Additional Documents (Optional)</label>
            <input type="file" name="additional_files" class="form-control" multiple />
            <% if (client.additional_files && client.additional_files.length > 0) { %>
                <div class="mt-2">
                    <% client.additional_files.forEach(file => { %>
                        <div class="mb-1">
                            <a href="<%= file %>" target="_blank" class="text-decoration-none small">üìÑ View Additional File</a>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary mt-3 fw-bold">‚úÖ Upload Documents</button>

</form>



