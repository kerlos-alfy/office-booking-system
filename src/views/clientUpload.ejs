                <div class="mt-2">
                    <% client.additional_files.forEach(file => { %>
                        <div class="mb-1">
                            <a href="<%= file %>" target="_blank" class="text-decoration-none small">ðŸ“„ View Additional File</a>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary mt-3 fw-bold">âœ… Upload Documents</button>

</form>



