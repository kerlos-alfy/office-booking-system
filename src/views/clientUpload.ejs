                    <a href="<%= client.passport_file_path %>" target="_blank" class="badge bg-secondary text-white">View Current Passport</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Contract -->
    <div class="card-upload mb-3">
        <div class="me-3">
            <i class="fas fa-file-signature fa-2x text-danger"></i>
        </div>
        <div class="flex-grow-1">
            <label class="form-label fw-bold mb-1">ðŸ“„ Contract</label>
            <input type="file" name="contract_file" class="form-control" />
