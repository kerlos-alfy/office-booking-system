                <div class="mt-2">
                    <a href="<%= client.license_file_path %>" target="_blank" class="badge bg-secondary text-white">View Current License</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Ejari -->
    <div class="card-upload mb-3">
        <div class="me-3">
            <i class="fas fa-file-contract fa-2x text-success"></i>
        </div>
        <div class="flex-grow-1">
            <label class="form-label fw-bold mb-1">ðŸ“„ Ejari</label>
            <input type="file" name="ejari_file" class="form-control" />
