<%- include('partials/header') %>

<h1 class="mb-4 text-primary">üè¢ Branches List</h1>

<a href="/branches/new" class="btn btn-success mb-4">+ Add New Branch</a>

<% if (branches.length === 0) { %>
    <div class="alert alert-info">No branches found.</div>
<% } else { %>
    <div class="row g-4">
        <% branches.forEach(branch => { %>
            <div class="col-6 col-md-4 col-lg-3">
                <!-- ‚úÖ ŸÜÿÆŸÑŸä ÿßŸÑŸÉÿßÿ±ÿ™ Ÿäÿ±Ÿàÿ≠ ÿπŸÑŸâ ÿµŸÅÿ≠ÿ© ÿßŸÑŸÖŸÉÿßÿ™ÿ® ÿßŸÑÿÆÿßÿµÿ© ÿ®ÿßŸÑŸÅÿ±ÿπ -->
                <a href="/bookings/branch/<%= branch._id %>" class="text-decoration-none">
                    <div class="card shadow-sm branch-card h-100 d-flex align-items-center justify-content-center text-center">
                        <div>
                            <div style="font-size: 48px;">üè¢</div>
                            <h4 class="card-title mt-3 text-primary fw-bold"><%= branch.name %></h4>
                            <p class="card-text text-muted mt-2">üìç <%= branch.location %></p>
                        </div>
                    </div>
                </a>
            </div>
        <% }); %>
    </div>
<% } %>

<!-- Styling -->
<style>
    .branch-card {
        transition: all 0.3s ease;
        border: 2px solid #e0e0e0;
        background-color: #fff;
        cursor: pointer;
        border-radius: 16px;
        padding: 20px;
    }

    .branch-card:hover {
        border-color: #0d6efd;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
    }
</style>

<!-- Page Fade In -->
<style>
    body {
        animation: fadeIn 0.5s ease-in;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to   { opacity: 1; }
    }
</style>

