<%- include('../partials/explore-header') %>

<!-- Hero Section -->
<section class="py-5 text-center" style="background: #fff; border-bottom: 2px solid #eee;">
  <div class="container">
    <h1 class="display-4 fw-bold text-dark">Welcome to <span style="color: #c0392b">Your Own</span> Business Center</h1>
    <p class="lead text-muted mt-3 mb-4">
      Find your ideal workspace across <span style="color: #27ae60">Dubai</span> – ready, elegant, and efficient.
    </p>
    <a href="/client/branches" class="btn btn-danger btn-lg px-4 py-2 shadow-sm">🔍 Explore Offices</a>
  </div>
</section>

<!-- Modern Branches Section -->
<section class="py-5" style="background: linear-gradient(to bottom, #ffffff, #f2f2f2);">
  <div class="container">
    <h2 class="text-center fw-bold mb-5" style="color: #c0392b;">🏢 Our Branches in Dubai</h2>

    <div class="row g-4 justify-content-center">

      <% const branches = [
        { name: "Al Garhoud Branch", map: "https://www.google.com/maps/place/Your+Own+Business+Center" },
        { name: "A Mizhar Aswaaq Mall", map: "https://www.google.com/maps/place/aswaaq+Community+Mall+-+Al+Mizhar/" },
        { name: "Naif Branch", map: "https://www.google.com/maps/dir/25.2696146,55.3033635/7893%2BR8V" },
        { name: "Al Karama Branch", map: "https://www.google.com/maps/place/Al+Maskan+,+Karama" },
        { name: "Al Qusais Branch", map: "https://www.google.com/maps/place/Zulekha+Colonnade+-+Beirut+St" }
      ]; %>

      <% branches.forEach(branch => { %>
        <div class="col-md-4">
          <div class="card border-0 shadow-lg h-100 text-center branch-card p-4">
            <div class="mb-3">
              <i class="fas fa-map-marker-alt fa-3x text-danger"></i>
            </div>
            <h5 class="fw-bold text-dark mb-3"><%= branch.name %></h5>
            <a href="<%= branch.map %>" target="_blank" class="btn btn-outline-danger px-4 rounded-pill">📍 View on Map</a>
          </div>
        </div>
      <% }) %>

    </div>
  </div>
</section>

<style>
  .branch-card {
    border-radius: 16px;
    background-color: #fff;
    transition: all 0.3s ease-in-out;
  }

  .branch-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 1rem 2rem rgba(0, 0, 0, -13.825) !important
  }

  .branch-card i {
    transition: transform 0.3s ease;
  }

  .branch-card:hover i {
    transform: scale(1.2);
  }
</style>

<!-- What We Offer -->
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="mb-5 text-center fw-bold" style="color: #2c3e50">Why Choose Us?</h2>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow text-center p-4">
          <div class="mb-3"><i class="fas fa-map-marker-alt fa-3x text-danger"></i></div>
          <h5 class="fw-bold">Prime Locations</h5>
          <p class="text-muted">Strategically located branches to serve your business wherever it needs to be.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow text-center p-4">
          <div class="mb-3"><i class="fas fa-door-open fa-3x text-success"></i></div>
          <h5 class="fw-bold">Fully-Equipped Offices</h5>
          <p class="text-muted">All you need in one space – furniture, internet, and peace of mind.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow text-center p-4">
          <div class="mb-3"><i class="fas fa-handshake fa-3x text-warning"></i></div>
          <h5 class="fw-bold">Tailored Assistance</h5>
          <p class="text-muted">Our team is here to guide you through every step of the booking process.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="py-5 text-white text-center" style="background-color: #2c3e50">
  <div class="container">
    <h2 class="fw-bold mb-3">🚀 Ready to Elevate Your Business?</h2>
    <p class="mb-4">Browse our offices and book the perfect space to grow.</p>
    <a href="/client/offices" class="btn btn-success btn-lg px-4 py-2 shadow">Browse Offices</a>
  </div>
</section>

<%- include('../partials/explore-footer') %>
