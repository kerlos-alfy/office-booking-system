<%- include('../partials/explore-header') %>

<section class="container py-5">
  <h1 class="text-center fw-bold text-dark display-5 mb-4">
    üè¢ Offices in <%= branch.name %> ‚Äî <%= sizeLabel %>
  </h1>

  <% if (offices.length === 0) { %>
    <div class="alert alert-warning text-center fs-5">üö´ No available offices in this size range.</div>
  <% } %>

  <div class="row g-4">
    <% offices.forEach(office => { %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm rounded-4 overflow-hidden office-adaptive-card d-flex flex-column">
          <!-- ÿµŸàÿ±ÿ© -->
          <div class="office-img" style="background-image: url('/<%= office.main_image || "images/office-placeholder.jpg" %>');"></div>

          <!-- ÿßŸÑŸÖÿ≠ÿ™ŸàŸâ -->
          <div class="p-4 d-flex flex-column flex-grow-1 justify-content-between">
            <div>
              <h5 class="fw-bold text-dark mb-2">Office <%= office.office_number %></h5>

              <p class="text-muted mb-1 small">
                <i class="fas fa-ruler-combined me-2 text-primary"></i>
                <%= office.size_category.replace("-", " - ") %> sq.ft
              </p>

              <p class="text-muted small">
                <i class="fas fa-layer-group me-2 text-primary"></i>
                Floor <%= office.floor %>
              </p>
            </div>

            <a href="/client/offices/<%= office._id %>" class="btn btn-dark rounded-pill mt-3 fw-semibold">
              üîç View Office
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<!-- CSS ŸÅÿßÿÆÿ± ŸÖÿ™ÿ¨ÿßŸàÿ® -->
<style>
.office-adaptive-card {
  background: #fff;
  transition: all 0.3s ease;
}
.office-adaptive-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 1rem 2rem rgba(0,0,0,0.08);
}
.office-img {
  height: 180px;
  background-size: cover;
  background-position: center;
}
.btn-dark {
  background-color: #1f2f46;
  border: none;
}
.btn-dark:hover {
  background-color: #162636;
}
</style>

<%- include('../partials/explore-footer') %>
