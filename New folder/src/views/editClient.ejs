<h1 class="mb-4 text-warning">✏️ Edit Client</h1>

<form method="POST" action="/clients/<%= client._id %>/edit" class="card shadow p-4 mb-5">

  <!-- Mobile -->
  <div class="mb-3">
    <label class="form-label fw-bold">📱 Mobile Number</label>
    <input type="text" name="mobile" class="form-control" value="<%= client.mobile %>" required>
  </div>

  <!-- Company Name -->
  <div class="mb-3">
    <label class="form-label fw-bold">🏢 Company Name (English)</label>
    <input type="text" name="company_en" class="form-control" value="<%= client.company_en %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label fw-bold">🏢 اسم الشركة (بالعربية)</label>
    <input type="text" name="company_ar" class="form-control" value="<%= client.company_ar %>" required>
  </div>

  <!-- Registered Owner Name -->
  <div class="mb-3">
    <label class="form-label fw-bold">👤 Registered Owner Name (English)</label>
    <input type="text" name="registered_owner_name_en" class="form-control" value="<%= client.registered_owner_name_en %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label fw-bold">👤 اسم المالك المسجل (بالعربية)</label>
    <input type="text" name="registered_owner_name_ar" class="form-control" value="<%= client.registered_owner_name_ar %>" required>
  </div>

  <!-- Email -->
<div class="mb-3">
  <label class="form-label fw-bold">📧 Email</label>
  <input type="email" name="email" class="form-control" value="<%= client.email || '' %>">
</div>

<!-- TRN -->
<div class="mb-3">
  <label class="form-label fw-bold">🧾 TRN (Tax Registration Number)</label>
  <input type="text" name="trn" class="form-control" value="<%= client.trn || '' %>">
</div>


  <!-- Nationality -->
  <div class="mb-3">
    <label class="form-label fw-bold">🌍 الجنسية</label>
    <select name="nationality_ar" class="form-select js-select2" required>
      <option disabled selected>أختر الجنسية</option>
      <% nationalities.forEach(function(n) { %>
        <option value="<%= n.ar %>" <%= client.nationality_ar === n.ar ? 'selected' : '' %>><%= n.ar %></option>
      <% }); %>
    </select>
  </div>

  <div class="mb-3">
    <label class="form-label fw-bold">🌍 Nationality</label>
    <select name="nationality_en" class="form-select js-select2" required>
      <option disabled selected>Choose Nationality</option>
      <% nationalities.forEach(function(n) { %>
        <option value="<%= n.en %>" <%= client.nationality_en === n.en ? 'selected' : '' %>><%= n.en %></option>
      <% }); %>
    </select>
  </div>

  <!-- Emirates ID Status -->
  <div class="mb-3">
    <label class="form-label fw-bold">🆔 Emirates ID Status</label>
    <select name="emirates_id_status" class="form-select" required>
      <option value="OK" <%= client.emirates_id_status === 'OK' ? 'selected' : '' %>>OK</option>
      <option value="NOT NEED" <%= client.emirates_id_status === 'NOT NEED' ? 'selected' : '' %>>NOT NEED</option>
      <option value="UNAVAILABLE" <%= client.emirates_id_status === 'UNAVAILABLE' ? 'selected' : '' %>>UNAVAILABLE</option>
    </select>
  </div>

  <!-- Contract Status -->
  <div class="mb-3">
    <label class="form-label fw-bold">📄 Contract Status</label>
    <select name="contract_status" class="form-select" required>
      <option value="OK" <%= client.contract_status === 'OK' ? 'selected' : '' %>>OK</option>
      <option value="NO" <%= client.contract_status === 'NO' ? 'selected' : '' %>>NO</option>
    </select>
  </div>

  <!-- License Status -->
  <div class="mb-3">
    <label class="form-label fw-bold">🏷️ License Status</label>
    <select name="license_status" class="form-select" required>
      <option value="OK" <%= client.license_status === 'OK' ? 'selected' : '' %>>OK</option>
      <option value="NO" <%= client.license_status === 'NO' ? 'selected' : '' %>>NO</option>
    </select>
  </div>

  <!-- License Number -->
  <div class="mb-3">
    <label class="form-label fw-bold">🏷️ License Number</label>
    <input type="text" name="license_number" class="form-control" value="<%= client.license_number || '' %>" required>
  </div>

  <!-- License Expiry Date -->
  <div class="mb-3">
    <label class="form-label fw-bold">📅 License Expiry Date</label>
    <input type="date" name="license_expiry" class="form-control" value="<%= client.license_expiry ? client.license_expiry.toISOString().split('T')[0] : '' %>" required>
  </div>

  <!-- Ejari No -->
  <div class="mb-3">
    <label class="form-label fw-bold">📄 Ejari No (Optional)</label>
    <input type="text" name="ejari_no" class="form-control" value="<%= client.ejari_no || '' %>">
  </div>

  <!-- Submit -->
  <button type="submit" class="btn btn-warning mt-3 fw-bold">💾 Save Changes</button>
  <a href="/clients/<%= client._id %>/view" class="btn btn-secondary mt-3 ms-2">↩️ Cancel</a>

</form>

