<%- include('../../partials/header') %>

<div class="container py-5">
  <h2 class="mb-4 text-primary fw-bold">🔐 Permissions</h2>

  <% if (permissions.length === 0) { %>
    <div class="alert alert-info">No permissions available.</div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-light text-center">
          <tr>
            <th>#</th>
            <th>Key</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% permissions.forEach((permission, index) => { %>
            <tr>
              <td class="text-center"><%= index + 1 %></td>
              <td><%= permission.key %></td>
<td><%= permission.name || '❌ No name' %></td>
              <td class="text-center">
                <a href="/admin/permissions/<%= permission._id %>/edit" class="btn btn-sm btn-warning me-1">✏️ Edit</a>
                <form action="/admin/permissions/<%= permission._id %>?_method=DELETE" method="POST" class="d-inline">
                  <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this permission?')">🗑️ Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <div class="text-end mt-4">
    <a href="/admin/permissions/new" class="btn btn-primary btn-lg">➕ Add New Permission</a>
  </div>
</div>

<%- include('../../partials/footer') %>
