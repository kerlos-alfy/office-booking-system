<%- include('partials/header') %>

<h1 class="mb-4 text-primary">🏢 Branch Details</h1>

<a href="/branches" class="btn btn-secondary mb-3">⬅️ Back to Branches</a>

<div class="card shadow p-4">
    <h3 class="text-primary"><%= branch.name %></h3>
    <p class="text-muted">📍 Location: <%= branch.location %></p>
    <p><strong>WhatsApp:</strong> <%= branch.whatsapp_number || 'Not set' %></p>

</div>

<!-- Page Fade In -->
<style>
    body {
        animation: fadeIn 0.5s ease-in;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to   { opacity: 1; }
    }
</style>

<%- include('partials/footer') %>
